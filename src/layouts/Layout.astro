---
// Import global styles - Adjust path if necessary based on your structure
import '../styles/global.css';

// Define props for the layout, e.g., title
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-background text-text-primary font-sans"> {/* Apply base styles */}
		<slot /> {/* Page content will be injected here */}
	</body>
</html>

<style is:global>
	/* Optional: Define global styles here if needed, beyond Tailwind */
	/* Example: Smooth scrolling */
	html {
		scroll-behavior: smooth;
	}

	/* Example: Basic font settings if not handled by Tailwind */
	body {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	}
</style>
